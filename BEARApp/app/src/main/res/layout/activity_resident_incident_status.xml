<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/body"
    tools:context=".ResidentIncidentStatusActivity">

    <TextView
        android:id="@+id/tv_incident_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incident Type:"
        android:textSize="22sp"
        android:fontFamily="@font/b_font"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/tv_incident_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/r_font"
        android:text="Loading..."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Location (at time of alert):"
        android:textSize="22sp"
        android:fontFamily="@font/b_font"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/tv_location_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Loading..."
        android:textSize="18sp"
        android:fontFamily="@font/r_font"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:text="Review your alert details. Press confirm to send."
        android:textSize="18sp"
        android:fontFamily="@font/r_font"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <!-- EditText for optional details -->
    <EditText
        android:id="@+id/et_incident_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Optional: Add more details (e.g., specific location, what you see)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/r_font"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_confirm_alert"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:text="Confirm and Send Alert"
        android:textSize="24sp"
        android:fontFamily="@font/b_font"
        android:textColor="@color/white"
        android:background="@drawable/c_button"
        android:padding="5dp"/>

    <!-- New Button for Opening Chat -->
    <Button
        android:id="@+id/btn_open_chat_resident"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:text="Open Chat"
        android:textSize="24sp"
        android:fontFamily="@font/b_font"
        android:textColor="@color/white"
        android:background="@drawable/c_button"
        android:padding="5dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <org.osmdroid.views.MapView
        android:id="@+id/map_view_resident"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>