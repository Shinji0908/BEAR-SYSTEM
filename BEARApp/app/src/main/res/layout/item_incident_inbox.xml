<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_item_incident_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="New Incident Alert!"
            android:textSize="22sp"
            android:fontFamily="@font/b_font"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_incident_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/r_font"
            android:textColor="@color/black"
            tools:text="Details: Fire at residential area, Brgy. Central" />

        <TextView
            android:id="@+id/tv_item_incident_resident_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/r_font"
            android:textColor="@color/black"
            tools:text="Reported by: Juan Dela Cruz" />

        <TextView
            android:id="@+id/tv_item_incident_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/r_font"
            android:textColor="@color/black"
            tools:text="Contact: 09123456789" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_item_dismiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Dismiss"
                android:textSize="16sp"
                android:fontFamily="@font/b_font"
                android:textColor="@color/blue"
                android:background="@drawable/button_secondary_background" />

            <Button
                android:id="@+id/btn_item_confirm_route"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirm &amp; Route"
                android:textSize="16sp"
                android:fontFamily="@font/b_font"
                android:textColor="@color/white"
                android:background="@drawable/c_button" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
