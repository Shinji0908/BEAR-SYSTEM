<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/body">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".VerificationStatusActivity">

        <!-- Header Section with BEAR Branding -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <!-- Main Status Text -->
            <TextView
                android:id="@+id/tvVerificationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Verification Status"
                android:textSize="30sp"
                android:fontFamily="@font/b_font"
                android:textColor="@color/blue"
                android:gravity="center"
                tools:text="Verification Status" />

            <!-- Status Value -->
            <TextView
                android:id="@+id/tvStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pending"
                android:textSize="24sp"
                android:fontFamily="@font/r_font"
                android:textColor="@color/red"
                android:gravity="center"
                tools:text="Pending" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvStatusSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Your documents are being reviewed"
                android:textSize="16sp"
                android:fontFamily="@font/r_font"
                android:textColor="@color/blue"
                android:gravity="center"
                tools:text="Your documents are being reviewed" />

        </LinearLayout>

        <!-- Admin Remarks Section -->

        <!-- Documents Section -->

        <LinearLayout
            android:id="@+id/remarksSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerSection">

            <TextView
                android:id="@+id/tvAdminRemarksLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b_font"
                android:gravity="center"
                android:text="Admin Remarks"
                android:textColor="@color/blue"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvAdminRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/semiwhite"
                android:fontFamily="@font/r_font"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Your documents are currently under review. Please check back later for updates." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/documentsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/remarksSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvSubmittedDocumentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitted Documents"
                android:textSize="22sp"
                android:fontFamily="@font/b_font"
                android:textColor="@color/blue"
                android:gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubmittedDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="120dp"
                android:visibility="gone"
                tools:listitem="@layout/item_submitted_document"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvNoDocumentsMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No documents submitted or details unavailable."
                android:textSize="16sp"
                android:fontFamily="@font/r_font"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="20dp"
                android:background="@color/semiwhite"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Action Buttons Section -->

        <!-- Loading Overlay -->
        <LinearLayout
            android:id="@+id/actionButtonsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/documentsSection"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/btnStatusAction"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/c_button"
                android:fontFamily="@font/b_font"
                android:padding="5dp"
                android:text="Go to Dashboard"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnRefreshStatus"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/c_button"
                android:fontFamily="@font/b_font"
                android:padding="5dp"
                android:text="Refresh Status"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/loading_background"
                android:padding="30dp">

                <ProgressBar
                    android:id="@+id/progressBarStatus"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminateTint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Loading..."
                    android:textSize="18sp"
                    android:fontFamily="@font/r_font"
                    android:textColor="@color/blue" />

            </LinearLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>